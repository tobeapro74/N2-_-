<%- include('../partials/header') %>

<div class="row justify-content-center">
  <div class="col-md-4">
    <div class="card shadow">
      <div class="card-body p-4">
        <div class="d-flex align-items-center mb-4 gap-2">
          <a href="/" class="back-link" aria-label="대시보드로 이동">
            <i class="bi bi-chevron-left" aria-hidden="true"></i>홈
          </a>
          <h4 class="mb-0"><i class="bi bi-key"></i> 비밀번호 변경</h4>
        </div>

        <% if (error) { %>
        <div class="alert alert-danger"><%= error %></div>
        <% } %>

        <% if (success) { %>
        <div class="alert alert-success"><%= success %></div>
        <% } %>

        <form method="POST" action="/auth/change-password">
          <%- include('../partials/csrf') %>
          <div class="mb-3">
            <label class="form-label">현재 비밀번호</label>
            <input type="password" name="current_password" class="form-control" required>
          </div>
          <div class="mb-3">
            <label class="form-label">새 비밀번호</label>
            <input type="password" name="new_password" class="form-control" required minlength="4">
          </div>
          <div class="mb-3">
            <label class="form-label">새 비밀번호 확인</label>
            <input type="password" name="confirm_password" class="form-control" required minlength="4">
          </div>
          <button type="submit" class="btn btn-success w-100">
            <i class="bi bi-check-lg"></i> 비밀번호 변경
          </button>
        </form>
      </div>
    </div>
  </div>
</div>

<%- include('../partials/footer') %>
