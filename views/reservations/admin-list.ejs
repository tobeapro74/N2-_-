<%- include('../partials/header') %>

<!-- 페이지 헤더 -->
<div class="d-flex align-items-center justify-content-between mb-3">
  <div class="d-flex align-items-center">
    <a href="/" class="back-link" aria-label="대시보드로 이동">
      <i class="bi bi-chevron-left" aria-hidden="true"></i>홈
    </a>
    <h5 class="mb-0 fw-bold"><i class="bi bi-calendar-check text-primary me-2" aria-hidden="true"></i>예약 관리</h5>
  </div>
</div>

<div class="card border-0 shadow-sm">
  <div class="card-header bg-white py-2 d-flex justify-content-between align-items-center">
    <h6 class="mb-0 fw-bold" style="font-size: 0.9rem;"><i class="bi bi-calendar-event text-success me-2"></i>다가오는 일정</h6>
    <small class="text-muted"><%= upcomingSchedules.length %>건</small>
  </div>
  <div class="card-body p-0">
    <% if (upcomingSchedules.length === 0) { %>
    <div class="text-center py-5">
      <i class="bi bi-calendar-x text-muted" style="font-size: 3rem;"></i>
      <h5 class="mt-3 text-muted">예정된 일정이 없습니다.</h5>
    </div>
    <% } else { %>
    <div class="table-responsive">
      <table class="table table-hover mb-0 sortable-table" style="font-size: 0.85rem;">
        <thead class="table-light">
          <tr>
            <th class="py-2 ps-3" data-sort="date">날짜</th>
            <th class="py-2" data-sort="string">골프장</th>
            <th class="py-2" data-sort="number">예약현황</th>
            <th class="py-2 text-center" data-sort="string">상태</th>
            <th class="py-2 pe-3"></th>
          </tr>
        </thead>
        <tbody>
          <% upcomingSchedules.forEach(schedule => { %>
          <tr>
            <td class="py-2 ps-3" data-value="<%= schedule.play_date %>">
              <span class="fw-bold"><%= moment(schedule.play_date).format('MM/DD') %></span>
              <span class="badge bg-light text-dark" style="font-size: 0.85rem;"><%= moment(schedule.play_date).format('ddd') %></span>
            </td>
            <td class="py-2"><%= schedule.course_name %></td>
            <td class="py-2" data-value="<%= schedule.reserved_count %>">
              <div class="d-flex align-items-center">
                <div class="progress flex-grow-1 me-2" style="height: 6px; max-width: 80px;">
                  <div class="progress-bar <%= schedule.reserved_count >= schedule.max_members ? 'bg-danger' : 'bg-success' %>"
                       style="width: <%= (schedule.reserved_count / schedule.max_members) * 100 %>%"></div>
                </div>
                <small class="text-nowrap <%= schedule.reserved_count >= schedule.max_members ? 'text-danger fw-bold' : '' %>">
                  <%= schedule.reserved_count %>/<%= schedule.max_members %>
                </small>
              </div>
            </td>
            <td class="py-2 text-center">
              <% if (schedule.status === 'open') { %>
              <span class="badge bg-success bg-opacity-75" style="font-size: 0.85rem;">예약가능</span>
              <% } else { %>
              <span class="badge bg-secondary" style="font-size: 0.85rem;"><%= schedule.status %></span>
              <% } %>
            </td>
            <td class="py-2 pe-3 text-end">
              <a href="/reservations/admin?schedule_id=<%= schedule.id %>" class="btn btn-primary btn-sm py-0 px-2 d-inline-flex align-items-center gap-1" style="font-size: 0.85rem;">
                <i class="bi bi-people-fill"></i> 예약관리
              </a>
              <a href="/schedules/<%= schedule.id %>" class="text-muted ms-1">
                <i class="bi bi-chevron-right"></i>
              </a>
            </td>
          </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
    <% } %>
  </div>
</div>

<%- include('../partials/footer') %>
