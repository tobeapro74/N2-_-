<%- include('../partials/header') %>

<!-- 페이지 헤더 -->
<div class="d-flex align-items-center justify-content-between mb-3">
  <div class="d-flex align-items-center">
    <a href="/" class="back-link" aria-label="대시보드로 이동">
      <i class="bi bi-chevron-left" aria-hidden="true"></i>홈
    </a>
    <h5 class="mb-0 fw-bold"><i class="bi bi-calendar-check text-success me-2" aria-hidden="true"></i>내 예약</h5>
  </div>
  <a href="/reservations/available" class="btn btn-success btn-sm py-1 px-3 d-flex align-items-center gap-1" style="font-size: 0.8rem;">
    <i class="bi bi-calendar-plus"></i> 예약신청
  </a>
</div>

<div class="card border-0 shadow-sm">
  <div class="card-header bg-white py-2 d-flex justify-content-between align-items-center">
    <h6 class="mb-0 fw-bold" style="font-size: 0.9rem;"><i class="bi bi-list-ul text-primary me-2"></i>예약 목록</h6>
    <small class="text-muted">총 <%= reservations.length %>건</small>
  </div>
  <div class="card-body p-0">
    <% if (reservations.length === 0) { %>
    <div class="text-center py-5">
      <i class="bi bi-calendar-x text-muted" style="font-size: 3rem;"></i>
      <h5 class="mt-3 text-muted">예약 내역이 없습니다.</h5>
      <a href="/reservations/available" class="btn btn-success btn-sm mt-3">
        <i class="bi bi-calendar-plus"></i> 예약하기
      </a>
    </div>
    <% } else { %>
    <div class="table-responsive">
      <table class="table table-hover mb-0" style="font-size: 0.85rem;">
        <thead class="table-light">
          <tr>
            <th class="py-2 ps-3">날짜</th>
            <th class="py-2">골프장</th>
            <th class="py-2 hide-mobile">위치</th>
            <th class="py-2 text-center">상태</th>
            <th class="py-2 hide-mobile text-center">팀</th>
            <th class="py-2 hide-mobile">티타임</th>
            <th class="py-2 pe-3"></th>
          </tr>
        </thead>
        <tbody>
          <% reservations.forEach(r => { %>
          <tr class="<%= r.status === 'cancelled' ? 'text-muted' : '' %> <%= new Date(r.play_date) < new Date() ? 'text-muted' : '' %>">
            <td class="py-2 ps-3">
              <span class="fw-bold"><%= moment(r.play_date).format('MM/DD') %></span>
              <span class="badge bg-light text-dark" style="font-size: 0.7rem;"><%= moment(r.play_date).format('ddd') %></span>
            </td>
            <td class="py-2"><%= r.course_name %></td>
            <td class="py-2 hide-mobile"><small class="text-muted"><%= r.location %></small></td>
            <td class="py-2 text-center">
              <% if (r.status === 'confirmed') { %>
              <span class="badge bg-success bg-opacity-75" style="font-size: 0.7rem;">확정</span>
              <% } else if (r.status === 'pending') { %>
              <span class="badge bg-warning text-dark" style="font-size: 0.7rem;">대기</span>
              <% } else if (r.status === 'waitlist') { %>
              <span class="badge bg-info" style="font-size: 0.7rem;">대기자</span>
              <% } else { %>
              <span class="badge bg-secondary" style="font-size: 0.7rem;">취소</span>
              <% } %>
            </td>
            <td class="py-2 hide-mobile text-center"><small><%= r.team_number ? r.team_number + '팀' : '-' %></small></td>
            <td class="py-2 hide-mobile"><small><%= r.tee_time || '-' %></small></td>
            <td class="py-2 pe-3 text-end">
              <% if (r.status !== 'cancelled' && new Date(r.play_date) >= new Date() && r.schedule_status === 'open') { %>
              <button type="button" class="btn btn-outline-danger btn-sm py-0 px-1" style="font-size: 0.75rem;" onclick="cancelReservation(<%= r.id %>)">
                취소
              </button>
              <% } %>
              <a href="/schedules/<%= r.schedule_id %>" class="text-muted ms-1">
                <i class="bi bi-chevron-right"></i>
              </a>
            </td>
          </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
    <% } %>
  </div>
</div>

<script>
// CSRF 토큰 가져오기
function getCsrfToken() {
  return document.querySelector('meta[name="csrf-token"]')?.content || '';
}

function cancelReservation(reservationId) {
  if (!confirm('예약을 취소하시겠습니까?')) return;

  fetch('/reservations/cancel', {
    method: 'POST',
    headers: {
      'Content-Type': 'application/json',
      'X-CSRF-Token': getCsrfToken()
    },
    body: JSON.stringify({ reservation_id: reservationId })
  })
  .then(res => {
    if (!res.ok) {
      return res.json().then(data => { throw new Error(data.error || '요청 처리 중 오류가 발생했습니다.'); });
    }
    return res.json();
  })
  .then(data => {
    if (data.success) {
      alert(data.message);
      location.reload();
    } else {
      alert(data.error || '오류가 발생했습니다.');
    }
  })
  .catch(err => {
    console.error('예약 취소 오류:', err);
    alert(err.message || '예약 취소 중 오류가 발생했습니다.');
  });
}
</script>

<%- include('../partials/footer') %>
